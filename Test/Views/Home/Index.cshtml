@{
    ViewBag.Title = "Синхронная - 1 в 1";
    @model Test.ViewModels.PageModel
}

<div class="flex-center">
    <div class="jumbotron p-4 w-50">

        @using (Html.BeginForm("Create", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group row">
                    @Html.LabelFor(model => model.MetaModel.ClientName, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.MetaModel.ClientName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MetaModel.ClientName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.MetaModel.Review, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(model => model.MetaModel.Review, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <hr />
                <input type="submit" value="Оставить отзыв" class="btn btn-primary float-md-right" />
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<table class="table table-bordered">
    <tr>
        <th width="30%">
            @Html.DisplayNameFor(model => model.MetaModel.ClientName)
        </th>
        <th width="70%">
            @Html.DisplayNameFor(model => model.MetaModel.Review)
        </th>
    </tr>

    @foreach (var item in Model.ListModel)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Review)
            </td>
        </tr>
    }

</table>